# Contract Environment Variables - Polkadot Hub Compatible
# Copy these to your backend .env file after deployment

# Your private key for deploying contracts (DO NOT commit this to git)
# Get this from Talisman: Account menu > Export Private Key
PRIVATE_KEY=your_private_key_here

# Polkadot Hub TestNet Configuration
POLKADOT_HUB_RPC_URL=https://rpc.polkadot-hub-testnet.polkadot.io
POLKADOT_HUB_CHAIN_ID=1111

# Other RPC URLs for different networks
SEPOLIA_RPC_URL=https://rpc.sepolia.org
GOERLI_RPC_URL=https://rpc.goerli.mudit.blog
MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com
MENDOZA_RPC_URL=http://localhost:8545

# Chain ID for Mendoza/Arkiv network (update as needed)
MENDOZA_CHAIN_ID=1337

# API keys for contract verification (optional)
ETHERSCAN_API_KEY=your_etherscan_api_key
POLYGONSCAN_API_KEY=your_polygonscan_api_key

# Gas reporting (optional)
REPORT_GAS=true

# Contract address (will be set after deployment)
# Copy this value to your backend .env file
TICKET_NFT_CONTRACT_ADDRESS=

# Faucet Information:
# Polkadot Hub Faucet: https://faucet.polkadot.io/?parachain=1111
# Note: Daily limits apply, may need multiple requests